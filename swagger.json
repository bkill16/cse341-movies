  "paths": {
    "/movies": {
      "get": {
        "summary": "Get all movies",
        "tags": ["Movies"],
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Movie"
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "post": {
        "summary": "Create a new movie",
        "tags": ["Movies"],
        "parameters": [
          {
            "name": "movie",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "releaseYear": {
                  "type": "string",
                  "pattern": "^\\d{4}$"
                },
                "director": {
                  "type": "string"
                },
                "rated": {
                  "type": "string"
                },
                "runtime": {
                  "type": "string",
                  "pattern": "^\\d{1,3} mins$"
                },
                "description": {
                  "type": "string"
                },
                "cast": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "genres": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "required": [
                "title",
                "releaseYear",
                "director",
                "rated",
                "runtime",
                "description",
                "cast",
                "genres"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Movie was successfully created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/movies/{id}": {
      "get": {
        "summary": "Get a movie by ID",
        "tags": ["Movies"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
              "$ref": "#/definitions/Movie"
            }
          },
          "404": {
            "description": "Movie not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "put": {
        "summary": "Update a movie by ID",
        "tags": ["Movies"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "movie",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "releaseYear": {
                  "type": "string",
                  "pattern": "^\\d{4}$"
                },
                "director": {
                  "type": "string"
                },
                "rated": {
                  "type": "string"
                },
                "runtime": {
                  "type": "string",
                  "pattern": "^\\d{1,3} mins$"
                },
                "description": {
                  "type": "string"
                },
                "cast": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "genres": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "required": [
                "title",
                "releaseYear",
                "director",
                "rated",
                "runtime",
                "description",
                "cast",
                "genres"
              ]
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Movie was successfully updated"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Movie not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "delete": {
        "summary": "Delete a movie by ID",
        "tags": ["Movies"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "Movie was successfully deleted"
          },
          "404": {
            "description": "Movie not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
