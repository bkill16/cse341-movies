  "definitions": {
    "Movie": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "releaseYear": {
          "type": "string"
        },
        "director": {
          "type": "string"
        },
        "rated": {
          "type": "string",
          "enum": ["G", "PG", "PG-13", "R", "NC-17"]
        },
        "runtime": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "cast": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "genres": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "Review": {
      "type": "object",
      "properties": {
        "movieId": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "score": {
          "type": "number",
          "minimum": 0,
          "maximum": 5
        },
        "comment": {
          "type": "string"
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      }
    }
