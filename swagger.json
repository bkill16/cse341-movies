  "definitions": {
    "Movie": {
      "type": "object",
      "required": [
        "title",
        "releaseYear",
        "director",
        "rated",
        "runtime",
        "description",
        "cast",
        "genres"
      ],
      "properties": {
        "id": {
          "type": "string",
          "example": "60d21b4667d0d8992e610c85"
        },
        "title": {
          "type": "string",
          "example": "The Shawshank Redemption"
        },
        "releaseYear": {
          "type": "integer",
          "example": 1994
        },
        "director": {
          "type": "string",
          "example": "Frank Darabont"
        },
        "rated": {
          "type": "string",
          "example": "R"
        },
        "runtime": {
          "type": "string",
          "example": "142 mins"
        },
        "description": {
          "type": "string",
          "example": "Two imprisoned men bond over a number of years, finding solace and eventual redemption through acts of common decency."
        },
        "cast": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "example": ["Tim Robbins", "Morgan Freeman", "Bob Gunton"]
        },
        "genres": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "Review": {
      "type": "object",
      "required": ["movieId", "userId", "score", "comment"],
      "properties": {
        "id": {
          "type": "string",
          "example": "60d21b4667d0d8992e610c85"
        },
        "movieId": {
          "type": "string",
          "example": "60d21b4667d0d8992e610c85"
        },
        "userId": {
          "type": "string",
          "example": "60d21b4667d0d8992e610c85"
        },
        "score": {
          "type": "number",
          "example": 4.5
        },
        "comment": {
          "type": "string",
          "example": "An outstanding movie with excellent performances."
        }
      }
    },
    "User": {
      "type": "object",
      "required": ["userId", "email"],
      "properties": {
        "id": {
          "type": "string",
          "example": "60d21b4667d0d8992e610c85"
        },
        "userId": {
          "type": "string",
          "example": "auth0|60d21b4667d0d8992e610c85"
        },
        "email": {
          "type": "string",
          "example": "kI5wQ@example.com"
        }
      }
    }
